<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resource' type='org.geomajas.puregwt.example.client.resource.ShowcaseResource' />

	<ui:style>
		.header {
			width: 100%;
			height: 62px;
			position: relative;
		}
		
 		.headerTopRow {
			background-color: #282a2c;
			text-align: right;
			color: #E0E0E0;
			padding-right: 20px;
			width: 100%;
			height: 5px;
		}
		
		.headerMiddleRow {
			background-color: #337428;
			width: 100%;
			height: 52px;
			position: relative;
		}
		
		.headerTitle {
			position: relative;
			float: right;
			margin: 15px 20px 10px 20px;
			font-size: 20px;
			font-weight: bold;
			font-family: Verdana, Arial;
			color: #FFFFFF;
		}
		
		.headerBottomRow {
			background-color: #282a2c;
			height: 5px;
			width: 100%;
			position: relative;
		}
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.header}">
 		<div class="{style.headerTopRow}">
		</div>
		<div class="{style.headerMiddleRow}">
			<div style="position:absolute;"><g:Image resource='{resource.geomajasLogoBg}' /></div>
			<div class="{style.headerTitle}">Showcase of features</div>
		</div>
		<div class="{style.headerBottomRow}"></div>
	</g:HTMLPanel>

</ui:UiBinder> 