<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resource'
		type='org.geomajas.puregwt.example.client.resource.ShowcaseResource' />

	<g:DockLayoutPanel unit="PX" width="100%" height="100%">
		<g:west size="300">
			<g:HTMLPanel addStyleNames="{resource.css.sampleLeftLayout}">
				<h2>Generate Server Exception:</h2>
				<g:Button ui:field="generateExceptionButton">Generate Server Exception</g:Button>
			</g:HTMLPanel>
		</g:west>
	</g:DockLayoutPanel>

</ui:UiBinder>