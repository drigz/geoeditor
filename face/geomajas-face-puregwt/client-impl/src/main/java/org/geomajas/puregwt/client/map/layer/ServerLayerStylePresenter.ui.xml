<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.top {
			display: inline;
		}
		
		.left {
			position: relative;
			top: 0px;
			display: inline;
		}
		
		.gimmeRoom {
			padding-left: 5px;
			white-space: nowrap;
			vertical-align: bottom;
		}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.top}">
		<g:Image ui:field="icon" addStyleNames="{style.left}" />
		<g:Label ui:field="label" addStyleNames="{style.left} {style.gimmeRoom}" />
	</g:FlowPanel>

</ui:UiBinder> 